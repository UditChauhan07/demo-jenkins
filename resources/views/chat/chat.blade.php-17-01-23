<script>
    function getAnswer() {
        var userid = $('#userid').val();
        var questionanswer = $('#questionanswer').val();
        $.ajax({
            type: 'POST',
            url: "{{url('askquestion')}}",
            data: {
                "_token": "{{ csrf_token() }}",
                "userid": userid,
                "questionanswer": questionanswer
            },
            success: function(data) {
                console.log(data);
                var userId = data.userId;
                if (data.status == 'success') {
                    getMessage(userId);
                    $('#questionanswer').val('');
                }

            }
        });
    }
</script>
